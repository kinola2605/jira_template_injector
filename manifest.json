{
  "manifest_version": 3,
  "name": "Jira Template Injector",
  "version": "1.0",
  "description": "Injecte automatiquement un mod√®le de texte dans le champ Description des tickets Jira.",
  "permissions": [
    "contextMenus",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["templates/templates.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}